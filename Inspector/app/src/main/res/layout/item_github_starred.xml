<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_marginBottom="10dp"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="1dp"
    app:cardElevation="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/selectableItemBackground">

        <TextView
            android:id="@+id/item_tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="项目名称"
            android:textColor="@color/black_90"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/item_tv_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_tv_name"
            android:ellipsize="end"
            android:maxLines="1"
            android:padding="10dp"
            android:text="项目详情"
            android:textColor="@color/font_normal"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="10dp">

            <com.hotbitmapgg.gank.widget.CircleImageView
                android:id="@+id/item_iv_avatar"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/ic_slide_menu_avatar_no_login" />

            <TextView
                android:id="@+id/item_tv_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="由 用户 创建"
                android:textColor="@android:color/darker_gray"
                android:textSize="12sp" />


        </LinearLayout>


        <TextView
            android:id="@+id/item_tv_create_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:padding="10dp"
            android:text="创建时间"
            android:textColor="@color/font_normal"
            android:textSize="14sp" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:orientation="horizontal"
            android:padding="10dp">

            <TextView
                android:id="@+id/item_tv_star_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:drawableLeft="@drawable/ic_action_favorite"
                android:drawablePadding="5dp"
                android:drawableTint="@android:color/darker_gray"
                android:gravity="center"
                android:text="99"
                android:textColor="@android:color/darker_gray" />

            <TextView
                android:id="@+id/item_tv_watch_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:drawableLeft="@drawable/ic_eye_white_24dp"
                android:drawablePadding="5dp"
                android:drawableTint="@android:color/darker_gray"
                android:gravity="center"
                android:text="99"
                android:textColor="@android:color/darker_gray" />

            <TextView
                android:id="@+id/item_tv_fork_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:drawableLeft="@drawable/ic_format_link_white_24dp"
                android:drawablePadding="5dp"
                android:drawableTint="@android:color/darker_gray"
                android:gravity="center"
                android:text="99"
                android:textColor="@android:color/darker_gray" />

        </LinearLayout>
    </RelativeLayout>

</android.support.v7.widget.CardView>