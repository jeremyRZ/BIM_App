<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <include layout="@layout/layout_toolbar" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:padding="10dp"
            android:text="目标干货:"
            android:textColor="@color/colorPrimary"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/select_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_marginRight="20dp"
            android:text="点击选择您要提交的干货类型"
            android:textColor="@color/font_normal"
            android:textSize="18sp" />

    </RelativeLayout>

    <include layout="@layout/layout_line_view" />


    <android.support.design.widget.TextInputEditText
        android:id="@+id/ed_title"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@null"
        android:ellipsize="end"
        android:hint="对干货内容的描述"
        android:inputType="text"
        android:maxLines="1"
        android:padding="10dp"
        android:textColor="@color/font_normal"
        android:textStyle="bold" />

    <include layout="@layout/layout_line_view" />


    <android.support.design.widget.TextInputEditText
        android:id="@+id/ed_url"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@null"
        android:ellipsize="end"
        android:hint="想要提交的网页地址"
        android:inputType="text"
        android:maxLines="1"
        android:padding="10dp"
        android:textColor="@color/font_normal" />

    <include layout="@layout/layout_line_view" />


    <android.support.design.widget.TextInputEditText
        android:id="@+id/ed_who"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@null"
        android:ellipsize="end"
        android:hint="提交者ID"
        android:inputType="text"
        android:maxLines="1"
        android:padding="10dp"
        android:textColor="@color/font_normal" />

    <include layout="@layout/layout_line_view" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:lineSpacingExtra="4dp"
        android:padding="10dp"
        android:text="小提示:\n1.复制要提交的干货链接URL\n2.将连接URL黏贴到输入框中\n3.干货的标题请不要超过一行,但最少5个字\n\n请对着 你正在用的 IDE 发誓，接下来提交的是真干货!"
        android:textSize="14sp" />


</LinearLayout>