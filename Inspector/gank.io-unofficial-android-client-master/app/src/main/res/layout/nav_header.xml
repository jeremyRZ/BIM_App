<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="@dimen/head_layout_height"
              android:background="@drawable/bg_slide_menu_header"
              android:gravity="bottom"
              android:orientation="vertical"
              android:fitsSystemWindows="true"
              android:padding="16dp"
              android:theme="@style/Base.ThemeOverlay.AppCompat.Dark">

    <com.hotbitmapgg.gank.widget.CircleImageView
        android:id="@+id/github_user_avatar"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginLeft="15dp"
        android:clickable="true"
        android:src="@drawable/ic_slide_menu_avatar_no_login"/>

    <TextView
        android:id="@+id/github_user_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:text="立即登录"
        android:textSize="18sp"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"/>

    <TextView
        android:id="@+id/github_user_bio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:text="使用你的GitHub账号进行登录"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"/>
</LinearLayout>